---
import Layout from "~/layouts/Layout.astro";

import { pagesData, getPageTitle } from "~/data/pages";
const title = getPageTitle(pagesData, Astro.url.pathname);
---

<script>
  import "../../components/motionHoverEffect/index.ts";
</script>

<Layout title={title}>
  <ul>
    <li>
      <a href="#" class="link">
        <div>bnw03</div>
        <img src="/bnw003.png" alt="" data-webGLTexture />
      </a>
    </li>
    <li>
      <a href="#" class="link">
        <div>bnw01</div>
        <img src="/bnw001.png" alt="" data-webGLTexture />
      </a>
    </li>
    <li>
      <a href="#" class="link">
        <div>bnw02</div>
        <img src="/bnw002.png" alt="" data-webGLTexture />
      </a>
    </li>
  </ul>
  <canvas id="canvas"></canvas>
</Layout>

<style>
  #canvas {
    width: 100%;
    height: 100dvh;
    position: fixed;
    left: 0;
    top: 0;
    background-color: transparent;
    pointer-events: none;
  }
  ul,
  li {
    background-color: transparent;

    a {
      border: 1px solid red;
      display: block;

      :not(img) {
        pointer-events: none;
      }
    }
  }
</style>
