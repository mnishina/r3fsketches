---
import Layout from "@layouts/Layout.astro";
---

<script src="../../components/distortionScroll/index.js"></script>

<Layout title="Distortion Scroll">
  <canvas id="canvas"></canvas>

  <div>
    <img src="/bnw001.png" alt="" data-webgl decoding="async" />
  </div>
  <div>
    <img src="/bnw002.png" alt="" data-webgl decoding="async" />
  </div>
  <div>
    <img src="/bnw003.png" alt="" data-webgl decoding="async" />
  </div>
  <div>
    <img src="/bnw004.png" alt="" data-webgl decoding="async" />
  </div>
  <div>
    <img src="/bnw005.png" alt="" data-webgl decoding="async" />
  </div>
</Layout>

<style>
  #canvas {
    width: 100%;
    height: 100dvh;
    position: fixed;
    left: 0;
    top: 0;
    z-index: -1;
  }

  img {
    vertical-align: bottom;
    visibility: hidden;
  }

  html,
  div,
  canvas,
  img {
    background-color: transparent;
  }

  body {
    background-color: #161616;
  }
  div {
    text-align: center;
    padding: 25vh 0;
  }
</style>
