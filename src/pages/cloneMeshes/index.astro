---
import Layout from "~/layouts/Layout.astro";

import { pagesData, getPageTitle } from "~/data/pages";
const title = getPageTitle(pagesData, Astro.url.pathname);
---

<script>
  import "../../components/cloneMeshes/index.ts";
</script>

<Layout title={title}>
  <canvas id="canvas"></canvas>
</Layout>

<style>
  html,
  body,
  ul,
  li,
  img {
    background-color: transparent;
  }
  #canvas {
    width: 100%;
    height: 100dvh;
    position: fixed;
    left: 0;
    top: 0;
    background-color: transparent;
    pointer-events: none;
    z-index: -1;
  }

  img {
    opacity: 0;
  }
</style>
