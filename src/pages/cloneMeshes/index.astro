---
import Layout from "~/layouts/Layout.astro";

import { pagesData, getPageTitle } from "~/data/pages";
const title = getPageTitle(pagesData, Astro.url.pathname);
---

<script>
  import "../../components/cloneMeshes/index.ts";
</script>

<Layout title={title}>
  <ul>
    <li><img src="/bnw003.png" alt="" data-webgl /></li>
    <li><img src="/bnw005.png" alt="" data-webgl /></li>
    <li><img src="/bnw004.png" alt="" data-webgl /></li>
  </ul>
  <canvas id="canvas"></canvas>
</Layout>

<style>
  html,
  body,
  ul,
  li,
  img {
    background-color: transparent;
  }
  #canvas {
    width: 100%;
    height: 100dvh;
    position: fixed;
    left: 0;
    top: 0;
    background-color: transparent;
    pointer-events: none;
    z-index: -1;
  }

  ul {
    list-style: none;

    padding-top: 30px;
    padding-left: 30px;
  }

  img {
    opacity: 0;
  }
</style>
